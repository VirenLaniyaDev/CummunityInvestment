<div class="modal fade" id="admin-change-password-modal" tabindex="-1" aria-labelledby="changePasswordModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-bottom-0">
                <h1 class="modal-title fs-5" id="">Change Password</h1>
                <button type="button" class="btn-close cancel-change-pass-btn" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="up-change-password-modalBody">
                <form id="admin-change-password-form">
                    <div class="input-container mb-4">
                        <label for="OldPassword" class="form-label">Current Password</label>
                        <input type="password" id="OldPassword" name="OldPassword" class="form-control input" placeholder="Enter Current Password" />
                        <span class="invalid-feedback"></span>
                    </div>
                    <div class="input-container mb-4">
                        <label for="NewPassword" class="form-label">New Password</label>
                        <div class="input-group">
                            <input id="NewPassword" type="password" name="NewPassword" class="form-control input" placeholder="Enter New Password" />
                            <button class="btn rounded-end-2 btn-outline-light border-start-0" type="button" id="admin-password-visible-btn">
                                <i id="password-visible-icon" class="bi bi-eye rg-icon"></i>
                                <i id="password-invisible-icon" class="bi bi-eye-slash rg-icon d-none"></i>
                            </button>
                            <span class="invalid-feedback"></span>
                        </div>
                    </div>
                    <div class="input-container mb-4">
                        <label for="ConfirmNewPassword" class="form-label">Confirm Password</label>
                        <input type="password" id="ConfirmNewPassword" name="ConfirmPassword" class="form-control input" placeholder="Confirm New Password" />
                        <span class="invalid-feedback"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn secondary-btn cancel-change-pass-btn" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn primary-btn" id="admin-change-password-btn" form="admin-change-password-form">
                    <span class="btn-loader spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    <span class="btn-content">Change Password</span>
                    <span class="btn-loader d-none">Please wait...</span>
                </button>
            </div>
        </div>
    </div>
</div>
