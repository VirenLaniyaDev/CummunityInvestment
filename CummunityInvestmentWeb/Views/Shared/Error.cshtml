@model ErrorViewModel
@{
    ViewData["Title"] = "Error " + Model.StatusCode;
    if(User.IsInRole("Admin"))
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    else
        Layout = "~/Views/Shared/_Layout.cshtml";
}

@switch (Model.StatusCode)
{
    case 404:
        <div class="d-flex align-items-center justify-content-center h-100">
            <img src="~/assets/404_ErrorPageNotFound.svg" class="error-illustrator w-50 h-50" />
        </div>
        break;
    case 400:
        <div class="d-flex align-items-center justify-content-center h-100">
            <img src="~/assets/400_ErrorBadRequest.svg" class="error-illustrator w-50 h-50" />
        </div>
        break;
    case 401:
        <div class="d-flex align-items-center justify-content-center h-100">
            <img src="~/assets/401_ErrorUnauthorized.svg" class="error-illustrator w-50 h-50" />
        </div>
        break;
    default:
        <h1 class="text-danger">Error.</h1>
        <h2 class="text-danger">An error occurred while processing your request.</h2>
        break;
}



